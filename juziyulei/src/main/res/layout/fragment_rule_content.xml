<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.yongfeng.qianfeng.breadhunter.sub.fragment.RuleContentFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/fragment_rulecontent_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_search_drawable"
            />
        <TextView
            android:id="@+id/fragment_rulecontentsearch_tv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="搜索"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>
 <GridView
     android:id="@+id/fragment_rulecontent_gv"
     android:layout_width="match_parent"
     android:numColumns="3"
     android:layout_height="wrap_content">

 </GridView>

</LinearLayout>
