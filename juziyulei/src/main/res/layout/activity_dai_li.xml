<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".channel.activity.DaiLiActivity">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/ic_dn_day_bg2"
    android:layout_height="150dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_well_choice_bg"
        android:layout_centerInParent="true"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/heard_chennelnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:gravity="center_horizontal"
        android:text="--------共有13篇----------"
        android:layout_alignEnd="@+id/textView"
        />
</RelativeLayout>
        <com.yongfeng.qianfeng.breadhunter.channel.CustomListView
            android:id="@+id/activity_daili_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.yongfeng.qianfeng.breadhunter.channel.CustomListView>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_behavior"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/ic_dn_day_bg"
        app:layout_behavior="com.yongfeng.qianfeng.breadhunter.channel.behaver.ToolbarAlphaBehavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/relativeLayout">
            <ImageButton
                android:id="@+id/activity_dailiback_imb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="橘子精选"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/activity_dailiback_imb"
                android:layout_centerHorizontal="true" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_share_pic_live"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/imageButton" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.CoordinatorLayout>
