<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yongfeng.qianfeng.breadhunter.LoginActivity">

    <com.yongfeng.qianfeng.breadhunter.CustomVideoView
        android:id="@+id/login_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:src="@drawable/ic_login_mask"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/back"
        android:text="随便逛逛"
        android:textColor="@color/whitesmoke"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_login_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_login_select"
        android:layout_above="@id/back"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_wx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:drawableTop="@drawable/ic_login_wx"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/login_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:drawableTop="@drawable/ic_login_qq"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/login_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:drawableTop="@drawable/ic_login_sina"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/login_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:drawableTop="@drawable/ic_login_phone"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/yule_tv"
        android:textColor="@color/white"
        android:text="登录橘子娱乐"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:layout_above="@id/ll_login_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_above="@id/yule_tv"
        android:layout_alignLeft="@id/yule_tv"
        android:layout_marginBottom="15dp"
        android:text="请选择你喜欢的方式"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
