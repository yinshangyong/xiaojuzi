<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yongfeng.qianfeng.breadhunter.channel.activity.BaGuaDetailActivity">
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/activity_baguadetail_ima"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/activity_baguadetailtitle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的天"
        android:textSize="20sp"
        android:textColor="#000000"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/activity_baguadetailname_tv"
            android:layout_width="wrap_content"
            android:text="juzi"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/activity_baguadetaitime_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="jiutianqian"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <WebView
        android:id="@+id/activity_baguadetail_web"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="wrap_content">
    </WebView>
</LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</LinearLayout>
