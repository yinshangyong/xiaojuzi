<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    tools:context="com.yongfeng.qianfeng.breadhunter.my.MyFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_portrait_logout_blur_image"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5" />

                <LinearLayout
                    android:id="@+id/rl_denglu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_logtou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_portrait_logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_portrait_login_tip"
                        android:gravity="center"
                        android:text="点击头像登录"
                        android:textSize="12sp" />
                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/my_msg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableTop="@drawable/ic_portrait_msg"
                        android:gravity="center"
                        android:text="我的消息" />

                    <Button
                        android:id="@+id/my_fav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableTop="@drawable/ic_portrait_favorite"
                        android:gravity="center"
                        android:text="我的收藏" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_1"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/pifu_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableTop="@drawable/ic_portrait_skin"
                        android:gravity="center"
                        android:text="个性皮肤" />

                    <Button
                        android:id="@+id/task_cent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableTop="@drawable/ic_portrait_task"
                        android:gravity="center"
                        android:text="任务中心" />

                    <Button
                        android:id="@+id/mall_point"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableTop="@drawable/ic_portrait_mall"
                        android:gravity="center"
                        android:text="积分商城" />

                    <Button
                        android:id="@+id/star_alarm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableTop="@drawable/ic_portrait_alarm"
                        android:gravity="center"
                        android:text="明星闹钟" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_2"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_portrait_invite"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="邀请好友" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_portrait_arrow" />
                    <!--<TextView-->
                    <!--android:layout_below="@+id/friend"-->
                    <!--android:background="@color/whitesmoke"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp" />-->
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_3"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/renhelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_portrait_feedback_help"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="反馈与帮助" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_portrait_arrow" />
                    <!--<TextView-->
                    <!--android:layout_below="@+id/renhelp"-->
                    <!--android:background="@color/whitesmoke"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp" />-->
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_4"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_portrait_setting"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_portrait_arrow" />
                    <!--<TextView-->
                    <!--android:layout_below="@+id/setting"-->
                    <!--android:background="@color/whitesmoke"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp" />-->
                </RelativeLayout>

            </RelativeLayout>


        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
